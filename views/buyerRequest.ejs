<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/css/buyerRequest.css">
    <link rel="stylesheet" href="/public/css/buyerDashboard.css">
    <link rel="stylesheet" href="/public/css/footer.css">
</head>
<body>
    <!-- Header -->
    <div class="header-main">
        <header>
            <div class="header-title">
                <h1>Billionaire Bytes Innovations</h1>
            </div>
        </header>
    </div>

    <!-- Buyer Navigation -->
    <div class="header-nav">
        <nav>
            <ul>
                <li><a href="/buyer/dashboard">Dashboard</a></li>
                <li><a href="/buyer/inventory">Inventory</a></li>
                <li><a href="/buyer/editing">Edit</a></li>
                <li><a href="/buyer/request">Requests</a></li>
                <li><a href="/buyer/pickUp">Pick-up</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </div>

    <!-- Buyer Requests -->
    <div class="request-list">
        <h2>Requests</h2>
        <% requests.forEach(request => { %>
            <div class="request-item">
                <h3>Item: <%= request.item.details %></h3>
                <p>Requested Quantity: <%= request.quantity %></p>
                <p>Status: <%= request.status %></p>
                <p>Seller: <%= request.sellerName %></p>
            </div>
        <% }) %>
    </div>

    <!-- Footer -->
    <%- include('footer') %>
</body>
</html>
