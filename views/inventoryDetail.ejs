<!-- inventoryDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/css/inventoryDetail.css">
    <link rel="stylesheet" href="/public/css/buyerDashboard.css">
    <link rel="stylesheet" href="/public/css/footer.css">
</head>
<body>
    <!-- Header -->
    <div class="header-main">
        <header>
            <!-- Header Title -->
            <div class="header-title">
                <h1>Billionaire Bytes Innovations</h1>
            </div>
        </header>
    </div>

    <!-- Buyer Navigation -->
    <div class="header-nav">
        <nav>
            <ul>
                <li><a href="/buyer/dashboard">Dashboard</a></li>
                <li><a href="/buyer/inventory">Inventory</a></li>
                <li><a href="/buyer/editing">Edit</a></li>
                <li><a href="/buyer/request">Requests</a></li>
                <li><a href="/buyer/pickUp">Pick-up</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </div>

    <!-- Item Details -->
    <div class="item-details-container">
        <img src="/public/uploads/<%= item.image.filename %>" alt="<%= item.image.originalname %>">
        <h2><%= item.details %></h2>
        <p><strong>Location:</strong> <%= item.location %></p>
        <p><strong>Quantity:</strong> <%= item.quantity %></p>
        <p><strong>Category:</strong> <%= item.category %></p>
        <p><strong>Contact:</strong> <%= item.contact %></p>
    </div>

    <!-- Footer -->
    <%- include('footer') %>
</body>
</html>
