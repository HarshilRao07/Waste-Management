        /* CSS for the upload form layout */
.form-container {
    display: flex;
    align-items: flex-start; /* Align items at the start of the flex container */
    margin-top: 20px; /* Optional: Add some space at the top */
}

.form-left {
    flex: 1;
    margin-right: 20px; /* Space between image preview and form */
}

.form-right {
    flex: 2;
}

.image-preview {
    width: 100%;
    max-width: 300px; /* Adjust as needed */
    max-height: 300px; /* Limit the height */
    object-fit: cover; /* Ensure image fits within the container */
    border: 1px solid #ccc; /* Optional: Add a border around the image */
    border-radius: 8px; /* Optional: Round the corners of the border */
    background-color: #f0f0f0; /* Optional: Background color for the preview area */
    margin-bottom: 20px; /* Space below the image */
}

/* Optional: Style for form elements */
form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

form input[type="text"],
form input[type="number"],
form textarea,
form select {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

form textarea {
    resize: vertical; /* Allow vertical resizing only */
}

form button {
    background-color: #27ae60; /* Match with header and navigation */
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
}

form button:hover {
    background-color: #2ecc71; /* Lighter green on hover */
}

    </style>
</head>
<body>
  <!-- Header -->
  <div class="header-main">
    <header>
        <!-- Header Title  -->
        <div class="header-title">
            <h1>Billionaire Bytes Innovations</h1>
        </div>
    </header>
</div>

<!-- Seller Navigation  -->
<div class="header-nav">
    <nav>
        <ul>
            <li><a href="/seller/dashboard">Dashboard</a></li>
            <li><a href="/seller/upload">Upload</a></li>
            <li><a href="/seller/editing">Editing</a></li>
            <li><a href="/seller/awards">Awards</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
</div>

<div class="main-content">
    <h1>Upload Waste</h1>
    <div class="form-container">
        <!-- Left side for image preview -->
        <div class="form-left">
            <h3>Image Preview</h3>
            <img id="preview" class="image-preview" src="https://via.placeholder.com/300" alt="Image Preview">
        </div>

        <!-- Right side for form -->
        <div class="form-right">
            <form id="uploadForm" action="/seller/upload" method="POST" enctype="multipart/form-data">
                <label for="image">Image Upload:</label>
                <input type="file" id="image" name="image" accept="image/*" required onchange="previewImage(event)"><br><br>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" required><br><br>

                <label for="contact">Contacting Details:</label>
                <input type="text" id="contact" name="contact" required><br><br>

                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" required><br><br>

                <label for="details">Product Details:</label><br>
                <textarea id="details" name="details" rows="4" cols="50" required></textarea><br><br>

                <label for="category">Category:</label>
                <select id="category" name="category" required>
                    <option value="steel">Steel</option>
                    <option value="glass">Glass</option>
                    <option value="paper">Paper</option>
                    <option value="plastic">Plastic</option>
                </select><br><br>

            <button type="submit">Upload</button>
        </form>
        </div>
    </div>
</div>


    <!-- Footer  -->
    <%- include('footer') %>


    <!-- JavaScript for image preview -->
    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function() {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
